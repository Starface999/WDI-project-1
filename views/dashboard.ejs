<!DOCTYPE html>
<html lang="en">

<% include ./_head %>

<!-- VIEWABLE APP -->
<body>
	<% include ./_bnav %>
	<!-- CONTENT -->
	<div class="container">
		<div class="row">
			<h2>Project Title <!-- Machinapocolypse --></h2>
			<h5>Brief Description of project to be put in when you create a new project.</h5>
			<hr>
		</div> <!-- col/row div -->
	</div> <!-- container div -->
	<div class="container">
		<div class="row" id="charList">
				<p>Character Section</p>
				<!-- Square card -->
				<% for (i=0;i<characters.length;i++){ %>
				<div class="col-md-2 col-sm-4" data-id="#<%=characters[i]._id %>">
					<div class="demo-card-square mdl-card mdl-shadow--2dp">
					  <div class="mdl-card__title mdl-card--expand">
					    <h2 class="mdl-card__title-text"><%=characters[i].name %></h2>
					  </div>
					  <div class="mdl-card__supporting-text">
					  	Preview or small version of the Description
					  </div>
					  <div class="mdl-card__actions mdl-card--border">
					    <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" data-toggle="modal" data-target="#<%=characters[i]._id %>">
					      Details
					    </a>
					  </div>
					</div>
				</div>
				<!-- <br /> --> <!-- PUTS SPACE BETWEEN BOXES. TAKE OUT WHEN I MAKE THE BOXES HORIZONTAL -->
				<% } %>

				<!-- Modal -->
				<% for (i=0;i<characters.length;i++){ %>
				<div class="modal fade" id="<%=characters[i]._id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
				  <div class="modal-dialog" role="document">
				    <div class="modal-content">
				      <div class="modal-header">
				        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				        <h4 class="modal-title" id="myModalLabel"><%=characters[i].name %></h4>
				      </div>
				      <div class="modal-body">
				        <strong>Age:</strong> <%=characters[i].age %><br />
				        <strong>Hair:</strong> <%=characters[i].hair %><br />
				        <strong>Skin Tone:</strong> <%=characters[i].skin %><br />
				      </div>
				      <div class="modal-footer">
				      	<button class="btn btn-danger pull-left deleteBtn" type="delete" data-id="<%= characters[i]._id %>" data-dismiss="modal">Delete</button>
				        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				        <button type="button" class="btn btn-primary">Save changes</button>
				      </div>
				    </div>
				  </div>
				</div>
				<% } %>

				</div>
				<div class="row">
				<!-- List items -->
				<!-- <ul id="charList">
					<% for (i=0;i<characters.length;i++){ %>
					  <li id="<%= characters[i]._id %>"><em><%=characters[i].name %></em><br />
					  <strong>Age:</strong> <%=characters[i].age %><br />
					  <strong>Hair:</strong> <%=characters[i].hair %><br />
					  <strong>Skin Tone:</strong> <%=characters[i].skin %><br />
					  <button class="btn deleteBtn" type="delete" data-id="<%= characters[i]._id %>">Delete</button>
					  </li><br />
					<% } %>
				</ul> -->
				<hr>
				<!-- NEW FORM -->
				<div class="input-group">
				  <form action="" id="newCharacter">
				    <input type="text" name="name" placeholder="Character Name">
				    <input type="text" name="age" placeholder="Age">
				    <input type="text" name="hair" placeholder="Hair Color">
				    <input type="text" name="skin" placeholder="Skin Tone">
				    <button class="btn" type="submit" id="charSubmitBtn">Submit</button>
				  </form>
				</div>
			<!-- <div id="geo-col" class="col-md-3 col-md-offset-0"> -->
